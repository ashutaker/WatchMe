<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.android.watchme.app.DetailActivityFragment">
        <ProgressBar
            android:id="@+id/progress_details"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Holo.ProgressBar.Large"/>

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#26A69A"
            android:paddingLeft="8dp"
            android:paddingTop="20dp"
            android:text="Movie Title"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="50sp" />

        <ImageView
            android:id="@+id/poster"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_below="@+id/movie_title"
            android:paddingLeft="16dp"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_title"
            android:layout_toRightOf="@id/poster"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="Today"
            android:textAlignment="textStart"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/runtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/release_date"
            android:layout_toRightOf="@id/poster"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="100mins"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/runtime"
            android:layout_toRightOf="@id/poster"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="Awesome"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/rating"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/poster"
            android:background="#40eed1"
            android:lines="2"
            android:text="mark as favorite"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/plot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/poster"
            android:ellipsize="end"
            android:lines="3"
            android:maxLines="3"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:text="overview"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/plot"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#080000"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/trailers_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trailer_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="Trailers"
                android:textSize="20sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/trailer_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trailer_head"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/trailers_section"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#080000"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/review_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/review_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:paddingLeft="16dp"
                android:text="Reviews"
                android:textSize="20sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/review_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/review_title" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>